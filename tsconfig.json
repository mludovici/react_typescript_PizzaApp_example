{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"strict": true,
		"noEmit": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"plugins": [{"name": "typescript-plugin-css-modules"}]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules/**/*"
	]
}